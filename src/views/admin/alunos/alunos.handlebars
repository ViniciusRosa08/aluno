<main>
    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
            <h2>Lista de alunos</h2>
            <hr>
            <a href="/rota_alunos/alunos/add">
                <button class="btn btn-success">Novo aluno</button></a>
            {{#each tarefas}}
            <div class="card mt-4">
                <div class="card-body">
                    <h4><b>ID:</b>{{_id}}</h4>
                    <small><b>Nome:</b> {{nome}} </small><br>
                    <small><b>Idade:</b> {{idade}} </small><br>
                    <!--Botão para editar tarefas-->
                    <a href="/rota_alunos/editar_alunos/{{_id}}">
                        <button class="btn btn-success mt-3">
                            Editar aluno
                        </button>
                    </a>
                    <!--botão para deletar tarefas -->
                    <a href="/rota_alunos/deletar_alunos/{{_id}}">
                        <button class="btn btn-danger mt-3">
                            Deletar aluno
                        </button>
                    </a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</main>