<main>
    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
            <h3> Editar alunos: </h3>
            <div class="card">
                <div class="card-body">
                    <form action="/rota_alunos/alunos/editar_alunos" method="POST">
                        {{#if alunos}}
                        <label for="_id">ID: </label>
                        <input type="text" id="_id" name="_id" readonly="true" class="form-control"
                            value="{{alunos._id}}"><br>
                        <label for="nome">Nome: </label>
                        <input type="text" id="nome" name="nome" class="form-control" value="{{alunos.nome}}"><br>
                        <label for="descricao">Idade: </label>
                        <input type="text" id="descricao" name="idade" class="form-control"
                            value="{{alunos.idade}}"><br>
                        <button type="submit" class="btn btnsuccess">Editar alunos</button>
                    </form>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</main>